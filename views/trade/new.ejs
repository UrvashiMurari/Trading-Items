<%- include('../partials/header.ejs')%>

<div class="body1" >
<div class="content-block">
 
    <form action ='/trades', method= 'POST'>
        <table>
        <tr>
           <td><label for="Category">Category</label> </td>
           <td><input type="text" id="category" name="category" placeholder="Enter Category" required> </td>
        </tr>

        <tr>
            <td><label for="SubCategory">SubCategory</label> </td>
            <td><input type="text" id="subCategory" name="subCategory" placeholder="Enter Sub Category" required> </td>
         </tr>
    
        <tr>
            <td><label for="title">title</label> </td>
            <td><input type="text" id="title" name="title" placeholder="Enter Product Name" required></td>
        </tr>

        <tr>
            <td><label for="color">color</label> </td>
            <td><input type="text" id="color" name="color" placeholder="Enter color of Product" required></td>
        </tr>

        <tr>
            <td><label for="description">Description</label> </td>
            <td><input type="text" id="description" name="description" placeholder="Enter Description" required minlength="8"></td>
        </tr>
    
        <tr>
           <td><label for="image">Upload Product Image</label></td>
           <td><input type="file" id="image" name="image"></td>
        </tr>
    
        <tr>
           <td><button type="submit" >Create Trade </button> </td>
        </tr>
    </table>
    </form>
    
</div>
</div>

